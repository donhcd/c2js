      if (request.readyState == 4) {
        ccode = request.responseText;
        console.log(ccode);
        document.getElementById('ccode').value = ccode;
        jscode = window.compile(ccode);
        jscode = js_beautify(jscode);
        document.getElementById('jscode').value = jscode;
      } 
    };
  }, false);
